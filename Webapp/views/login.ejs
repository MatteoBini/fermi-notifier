<body>

        <!-- NAVBAR -->
        <nav class="navbar">
            <div class="navbar-inner">
                <a class="logo" href="/">
                    <img src="../IMG/logo-long-white-trasp.png">
                </a>
                <a href="#" class="hamburger">
                    <span class="line"></span>
