<title>Iscrizione Â· Fermi Notify</title>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="navbar-inner">
            <a class="logo" href="/">
                <img src="../IMG/logo-long-white-trasp.png">
            </a>
            <a href="#" class="hamburger">
                <span class="line"></span>
                <span class="line"></span>
                <span class="line"></span>
            </a>
            <div class="nav-links">
                <ul>
                    <li>
                        <a href="./login" class="spanHighlight"><span>&gt;</span> Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

<form id="registerForm" class="loginFormContainer" action="/users/register" method="POST" onSubmit="check()">
    <h1 class="title"><span style="color: #F29C46;">&gt;</span> iscriviti</h1>
    <div class="nomecognome inputs">
        <div class="fname">
            <label for="Nome" id="fname-label">Nome</label>
            <input type="text" placeholder="Nome" name="name" id="name" required class="input-box">
        </div>
        <div class="lname">
            <label for="Cognome" id="lname-label">Cognome</label>
            <input type="text" placeholder="Cognome" name="surname" id="surname" required class="input-box">
        </div>
    </div>
    <div class="email inputs">
        <label for="Email" id="email-label">Email</label>
        <input type="email" placeholder="Email" name="email" id="email" required class="input-box">
    </div>
    <div class="psw inputs">
        <label for="Password" id="psw-label">Password</label>
        <div class="psw-bar">
            <input type="password" placeholder="Password" name="password" id="password" required class="input-box">
            <span id="PSWShowHideIcon" onclick="ShowPSW()"><i class="fa-solid fa-eye-slash"></i></span>
        </div>
    </div>
    <div class="confirm-psw inputs">
        <label for="Conferma Password" id="confirm-psw-label">Conferma password</label>
        <input type="password" placeholder="Conferma" name="password2" id="password2" required class="input-box">
    </div>
    <div class="confirm">
        <input type="submit" value="Register" style="width:100%; height: 100%; background-color: #F29C46; color: white; margin: auto; border-color: #F29C46"/>
    </div>
</form>

<div class="footer">
    <a href="./credits" class="spanHighlight"><span>&gt;</span> Credits</a>
    <p>Questo sito utilizza cookie tecnici</p>
</div>

<script>
    $('input').on('change', function(){ // quando tag input cambia => function()
         if($(this).val()==""){
            $(this).removeClass('inserted');
         }
         if($(this).val()!=""){
            $(this).addClass('inserted');
         }
    });

    $('input').on('focus', function(){
         labelID = this.id + "-label";
         $("#"+labelID).css("color", "var(--highlighted-color)");
         $(this).on("focusout", function() {
            $("#"+labelID).css("color", "#fff");
        });
    });
</script>

<script src="../JS/ShowPSW.js"></script>


</body>
</html>