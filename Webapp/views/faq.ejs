    <script>
        // onclick indexElem add active and remove to the others
        const indexElem = document.querySelectorAll(".indexElem");
        indexElem.forEach(elem => {
            elem.addEventListener("click", () => {
                indexElem.forEach(elem => {
                    elem.classList.remove("indexElemActive");
                });
                elem.classList.add("indexElemActive");
            });
        });
    </script>

    <script>
        function showElem(elem) {
            const id = elem.id;
            const container = document.getElementById(id + "Container");
            const indexElemContainer = document.querySelectorAll(".indexElemContainer");
            indexElemContainer.forEach(elem => {
                elem.classList.remove("indexElemShow");
            });
            container.classList.add("indexElemShow");
        }
    </script>

    <script>
        // faqIndexMobile select
        var select = document.getElementById("faqIndex-select");
        function onChange() {
            var value = select.value;
            const container = document.getElementById(value + "Container");
            const indexElemContainer = document.querySelectorAll(".indexElemContainer");
            indexElemContainer.forEach(elem => {
                elem.classList.remove("indexElemShow");
            });
            container.classList.add("indexElemShow");
        }
        select.onchange = onChange;
        onChange();
    </script>
