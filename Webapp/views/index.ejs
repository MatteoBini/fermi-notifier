    <title>Fermi Notify</title>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="navbar-inner">
            <a class="logo" href="/">
                <img src="/IMG/nav-logo.png">
            </a>
            <a class="hamburger">
