            <div class="nav-links">
                <ul>
                    <% if(isLogged){ %> 
                        <li>
                            <a href="./dashboard" class="spanHighlight"><span>&gt;</span> Dashboard</a>
                        </li>
                    <% }else{ %>
                        <li>
                            <a href="./register" class="spanHighlight"><span>&gt;</span> Registrati</a>
                        </li>
                        <li>
                            <a href="./login" class="spanHighlight"><span>&gt;</span> Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="minHeight-100vh">

        <div class="container-title">
            <div class="container-mid">
                <div class="container-subtitle">
                    <p class="main-subtitle1 selected-highlight">
                        &gt; inserisci il tag <br>
